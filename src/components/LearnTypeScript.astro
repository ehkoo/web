---
import { getCollection } from 'astro:content'

const posts = await getCollection('typescript', (entry) => !entry.data.draft)
---

<style>
  :root {
    --ts-blue: #3178c6;
  }

  .posts {
    border: 0.25rem solid var(--ts-blue);
    gap: var(--size-3);

    @media (--lg) {
      margin-inline: calc(var(--size-3) * -1);
    }
  }

  .tag {
    background-color: var(--ts-blue);
    color: #fff;
    padding-inline: var(--size-2);
    margin-inline-start: var(--size-3);
    font-size: var(--font-xs);
  }

  .container {
    padding: var(--size-3);
  }

  .article {
    display: grid;
    align-items: center;
    gap: var(--size-2);

    @media (--md) {
      grid-template: 1fr / 140px 1fr;
    }
  }

  .title {
    font-size: var(--font-size-1);
  }

  .cover {
    display: none;

    @media (--md) {
      display: initial;
      border-radius: var(--radius-2);
      border: 1px solid var(--surface-1);
    }
  }

  .meta {
    color: var(--text-secondary);
    font-weight: 300;
    font-size: 0.9em;
  }

  .mobile-cover {
    border-radius: 0.25em;

    @media (--md) {
      display: none;
    }
  }
</style>

<div class="posts">
  <span class="tag">series</span>

  <div class="container flow">
    <h3>C√πng h·ªçc TypeScript ü•≤</h3>

    <img
      class="mobile-cover"
      src="https://res.cloudinary.com/duqeezi8j/image/upload/c_scale,f_auto,w_900/v1691825147/63b6d8a08457f76328179bbe.jpg"
      alt="C√πng h·ªçc TypeScript cƒÉn b·∫£n"
    />

    {
      posts.map(({ data, slug }) => (
        <article class="article">
          <a href={`/learn-typescript-together/${slug}`}>
            <img class="cover" src={data.cover} alt={data.title} loading="lazy" decoding="async" />
          </a>

          <div class="flow" style="--flow-space: 0.5em;">
            <a href={`/learn-typescript-together/${slug}`} class="title no-underline-link">
              <h3>{data.title}</h3>
            </a>

            <p class="meta">{data.excerpt}</p>
          </div>
        </article>
      ))
    }
  </div>
</div>
