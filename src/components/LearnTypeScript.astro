    alt="C√πng h·ªçc TypeScript cƒÉn b·∫£n"
  /> -->

  {
    posts.map(({ data, slug }) => (
      <>
        <Article
          url={`/learn-typescript-together/${slug}`}
          cover={data.cover}
          title={data.title}
          author={data.author}
          publishedDate={data.date}
