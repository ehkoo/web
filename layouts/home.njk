{% extends "layouts/index.njk" %}

{% block content %}
<div class="flex flex-column flex-row-ns pa3">
  <div class="w-70-m w-60-l pr3-ns">
  {% for post in lastPosts %}
    {% if post.type === 'quote' %}
    <div class="bg-light-gray mb3">
      <div class="flex items-center">
        <div class="w-50">
          <div class="bg-center cover h5" style="background-image: url({{ post.cover }})"></div>
        </div>
        <div class="w-50">
          <blockquote class="ph3 fw3 f4 f3-ns i mid-gray serif quote">
            {{ post.contents | safe }}
            <p class="lh-copy">&ndash; {{ post.author }}</p>
          </blockquote>
        </div>
      </div>
    </div>
    {% else %}
    <div class="bg-white mb3">
      <div class="flex">
        <div class="w-80-ns pa3">
          <div class="flex items-center">
          {% if post.tags %}
            <ul class="list">
            {% for tag in post.tags %}
              <li class="dib"><a href="/chu-de/{{ tag.slug }}" class="ph2 pv1 db br2 bg-lightest-blue blue">{{ tag.name }}</a></li>
            {% endfor %}
            </ul>
          {% endif %}
            <span class="gray f6 ml-auto">
              {{ post.date }} &bull; {{ wordCount }} tá»«
            </span>
          </div>
          <a href="/{{ post.path }}" class="navy"><h1 class="mv3 f3 fw7">{{ post.title }}</h1></a>
          <p class="mv2 lh-copy silver f4">{{ post.excerpt or 'hello world' }}</p>
        </div>
        <div class="w-20-ns">
          <div class="bg-center cover h-100" style="background-image: url({{ post.cover }})"></div>
        </div>
      </div>
    </div>
    {% endif %}
  {% endfor %}
  </div>

  <div class="w-30-m w-40-l">
    {% include "layouts/el/sidebar.njk" %}
  </div>
</div>
{% endblock %}
