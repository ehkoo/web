{% extends "layouts/index.njk" %}

{% block head %}
{% include "layouts/el/opengraph.njk" %}
{% endblock %}

{% block content %}
<div class="flex flex-column flex-row-ns pa3">
  <div class="w-75-ns pr3-ns">
    <article class="bg-white pv3 ph4">
      <h1 class="blue f2 mb4">{{ title }}</h1>
      <div class="content lh-copy dark-gray f4">{{ contents | safe }}</div>
    </article>
  </div>

  <div class="w-25-ns">
    <div class="flex flex-column flex-row-ns top-1 sticky">
      <div class="mr3-ns">
        {% include "layouts/el/widgets/subscription.njk" %}
        {% include "layouts/el/widgets/social.njk" %}
        {% include "layouts/el/widgets/recruit.njk" %}
      </div>
    </div>

  </div>
</div>
{% endblock %}
