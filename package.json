{
  "name": "@ehkoo/site",
  "version": "2.0.0",
  "license": "MPL-2.0",
  "engines": {
    "node": "~8.0.0"
  },
  "homepage": "https://ehkoo.com",
  "description": "Ehkoo website",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehkoo/web"
  },
  "watch": {
    "build:dev": {
      "patterns": ["content/**/*", "assets/**/*", "layouts/**/*"],
      "extensions": "md,css,njk,js,json"
    }
  },
  "scripts": {
    "build": "rimraf dist/* -rf && NODE_ENV=production node metalsmith.js",
    "build:dev": "node metalsmith.js",
    "watch": "npm-watch build:dev",
    "serve": "http-server dist -s",
    "start": "concurrently npm:watch npm:serve"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.10.0",
    "lodash": "^4.17.5",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-feed": "^1.0.0",
    "metalsmith-headings-identifier": "0.0.11",
    "metalsmith-html-minifier": "^2.4.5",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-markdown-remarkable": "^0.1.1",
    "metalsmith-serve": "0.0.7",
    "metalsmith-static": "0.0.5",
    "metalsmith-tags": "^2.0.0",
    "metalsmith-watch": "^1.0.3",
    "metalsmith-word-count": "0.0.4",
    "moment": "^2.21.0",
    "npm-watch": "^0.3.0",
    "nunjucks": "^3.0.1",
    "rimraf": "^2.6.2",
    "slug-component": "^1.1.0",
    "substitute": "https://github.com/segmentio/substitute/archive/0.0.1.tar.gz"
  }
}
