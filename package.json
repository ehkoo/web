{
  "name": "@ehkoo/site",
  "version": "2.0.0",
  "license": "MPL-2.0",
  "engines": {
    "node": "~8.0.0"
  },
  "homepage": "https://ehkoo.com",
  "description": "Ehkoo website",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehkoo/web"
  },
  "watch": {
    "build:dev": {
      "patterns": [
        "content/**/*",
        "assets/**/*",
        "layouts/**/*"
      ],
      "extensions": "md,css,njk,js,json"
    }
  },
  "scripts": {
    "build": "rimraf dist/* -rf && NODE_ENV=production node metalsmith.js",
    "build:dev": "node metalsmith.js",
    "watch": "npm-watch build:dev",
    "serve": "http-server dist/ -s",
    "start": "concurrently npm:watch npm:serve"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^5.7.0",
    "eslint-plugin-prettier": "^3.0.0",
    "http-server": "^0.11.1",
    "jstransformer-nunjucks": "^0.5.0",
    "jstransformer-nunjucks-node": "^0.6.7",
    "lodash": "^4.17.11",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-drafts": "^0.1.0",
    "metalsmith-feed": "^1.0.0",
    "metalsmith-headings-identifier": "0.0.11",
    "metalsmith-html-minifier": "^3.0.0",
    "metalsmith-layouts": "^2.2.0",
    "metalsmith-markdown-remarkable": "^0.1.1",
    "metalsmith-serve": "0.0.7",
    "metalsmith-static": "0.0.5",
    "metalsmith-word-count": "0.0.4",
    "moment": "^2.22.2",
    "npm-watch": "^0.4.0",
    "nunjucks": "^3.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "slugify": "^1.3.1",
    "substitute": "https://github.com/segmentio/substitute/archive/0.0.1.tar.gz"
  }
}
