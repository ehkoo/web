{
  "name": "@ehkoo/site",
  "version": "3.0.0",
  "license": "MPL-2.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "homepage": "https://ehkoo.com",
  "description": "Ehkoo website",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehkoo/web"
  },
  "watch": {
    "build:dev": {
      "patterns": [
        "metalsmith.js",
        "content/**/*",
        "assets/**/*",
        "layouts/**/*",
        "plugins/**/*"
      ],
      "extensions": "md,css,njk,js,json"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production node metalsmith.js && cp dist/404/index.html dist/404.html && node generateRobots.js",
    "build:dev": "node metalsmith.js",
    "watch": "npm-watch build:dev",
    "serve": "http-server dist/ -s",
    "start": "concurrently npm:watch npm:serve"
  },
  "devDependencies": {
    "concurrently": "5.0.2",
    "dompurify": "2.0.7",
    "ent": "2.2.0",
    "eslint": "6.8.0",
    "eslint-plugin-prettier": "3.1.2",
    "highlight.js": "9.17.1",
    "http-server": "0.12.0",
    "jstransformer-nunjucks": "1.0.0",
    "jstransformer-nunjucks-node": "0.6.7",
    "lodash": "4.17.15",
    "metalsmith": "2.3.0",
    "metalsmith-collections": "0.9.0",
    "metalsmith-drafts": "1.0.0",
    "metalsmith-feed": "1.0.0",
    "metalsmith-headings-identifier": "0.0.11",
    "metalsmith-html-minifier": "4.0.0",
    "metalsmith-layouts": "2.3.1",
    "metalsmith-markdown": "1.3.0",
    "metalsmith-markdown-remarkable": "1.0.1",
    "metalsmith-serve": "0.0.7",
    "metalsmith-static": "0.0.5",
    "metalsmith-word-count": "0.0.4",
    "moment": "2.24.0",
    "npm-watch": "0.6.0",
    "nunjucks": "3.2.0",
    "prettier": "1.19.1",
    "slugify": "1.3.6",
    "substitute": "https://github.com/segmentio/substitute/archive/0.0.1.tar.gz"
  }
}
