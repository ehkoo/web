{
  "name": "@ehkoo/site",
  "version": "3.0.0",
  "license": "MPL-2.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "homepage": "https://ehkoo.com",
  "description": "Website tiếng Việt chuyên nói nhảm về JavaScript, CSS, và chuyện lập trình frontend. A website focusing on JavaScript, CSS, and frontend development. Content is in Vietnamese.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehkoo/web"
  },
  "watch": {
    "build:dev": {
      "patterns": [
        "metalsmith.js",
        "content/**/*",
        "assets/**/*",
        "layouts/**/*",
        "plugins/**/*"
      ],
      "extensions": "md,css,njk,js,json"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production npm run build:dev && cp dist/404/index.html dist/404.html && node generateRobots.js",
    "build:dev": "node metalsmith.js && postcss build -o dist/assets/main.css assets/main.css",
    "watch": "npm-watch build:dev",
    "serve": "serve -l 8080 dist/",
    "start": "SITE_URL=http://localhost:8080 concurrently npm:watch npm:serve"
  },
  "devDependencies": {
    "concurrently": "5.1.0",
    "cssnano": "4.1.10",
    "ent": "2.2.0",
    "eslint": "6.8.0",
    "eslint-plugin-prettier": "3.1.3",
    "jstransformer-nunjucks": "1.0.0",
    "jstransformer-nunjucks-node": "0.6.7",
    "lodash": "4.17.15",
    "metalsmith": "2.3.0",
    "metalsmith-collections": "0.9.0",
    "metalsmith-drafts": "1.0.0",
    "metalsmith-feed": "1.0.0",
    "metalsmith-layouts": "2.3.1",
    "metalsmith-markdown": "1.3.0",
    "metalsmith-serve": "0.0.7",
    "metalsmith-static": "0.0.5",
    "metalsmith-word-count": "0.0.4",
    "minireset.css": "0.0.6",
    "moment": "2.24.0",
    "npm-check": "5.9.2",
    "npm-watch": "0.6.0",
    "nunjucks": "^3.2.1",
    "postcss": "7.0.27",
    "postcss-atomic": "git+https://github.com/kcjpop/postcss-atomic.git",
    "postcss-cli": "7.1.0",
    "postcss-custom-media": "7.0.8",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.0.4",
    "serve": "11.3.0",
    "slugify": "1.4.0"
  }
}
